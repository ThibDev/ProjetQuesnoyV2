{% extends 'base.html.twig' %}

{% block title %}Liste des évènements{% endblock %}

{% block body %}
    <div class="container" style="margin-left: 50px">
        <div class="row">
            {% include "partials/adminnav.html.twig" %}
            <main class="col-9 border border-light bg-white p-2">
                <h1 id="h1ListeEvent">Liste des évènements</h1>
                <table class="table">
                    <thead style="background-color: #D2C8F8;">
                        <tr>
                            <th>Id</th>
                            <th>Titre</th>
                            <th>Photo</th>
                            <th>Du</th>
                            <th>Au</th>
                            <th>De</th>
                            <th>A</th>
                            <th>Adresse</th>
                            <th>Organisateur</th>
                            <th>Modifier</th>
                            <th>Supprimer</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for event in events %}
                            <tr>
                                <td>{{ event.id }}</td>
                                <td>{{ event.title }}</td>
                                <td>{{ event.picture }}</td>
                                <td>{{ event.startDate|date('d/m/y') }}</td>
                                <td>{{ event.endDate|date('d/m/y') }}</td>
                                <td>{{ event.startTime|date('H:i') }}</td>
                                <td>{{ event.endTime|date('H:i') }}</td>
                                <td>{{ event.address }}</td>
                                <td>{{ event.organizedBy }}</td>
                                <td><a href="{{ path('admin_events_edit', {id: event.id})}}"><i style="padding-left: 20px;color:black" class="bi bi-pencil-square"></i></a></td>
                                <td><a href="{{ path('admin_events_delete', {id: event.id})}}"><i style="padding-left: 25px;color:black" class="bi bi-trash"></i></a></td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </main>
        </div>
    </div>
{% endblock %}
