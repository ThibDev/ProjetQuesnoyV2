{% extends 'base.html.twig' %}

{% block title %}Ajout d'un évènement{% endblock %}

{% block body %}

<form class="formEvent" action="ajout" enctype="multipart/form-data" method="post">
    <h1 class="h1FormEvent">Ajout d'un évènement</h1>
    {{ form_start(eventsForm) }}
    <div class="Inp1Event">
        {{ form_row(eventsForm.title, {
        label: 'Titre',
        }) }}
        {{ form_row(eventsForm.picture, {
        label: 'Image',
        }) }}
    </div>
    <div class="Inp2Event">{{ form_row(eventsForm.start_date, {
        label: 'Date de début',
        }) }}
        {{ form_row(eventsForm.end_date, {
        label: 'Date de fin',
        }) }}
    </div>
    <div class="Inp3Event">{{ form_row(eventsForm.start_time, {
        label: 'Heure de début',
        }) }}
        {{ form_row(eventsForm.end_time, {
        label: 'Heure de fin',
        }) }}
    </div>
    <div class="Inp4Event">
        {{ form_row(eventsForm.address, {
        label: 'Adresse',
        }) }}
        {{ form_row(eventsForm.organized_by, {
        label: 'Organiser par:',
        }) }}
    </div>
    <div class="btnEvent">
        <button type="submit" class="btn">Envoyer</button>
    </div>
    {{ form_end(eventsForm) }}
</form>
{% endblock %}