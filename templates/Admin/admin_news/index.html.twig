{% extends 'base.html.twig' %}

{% block title %}Administration des Actualités{% endblock %}

{% block body %}
<div class="container" style="margin-left: 50px">
    <div class="row">
        {% include "_partials/_adminnav.html.twig" %}
        <main class="col-9 border border-light bg-white p-2">
            <h1 id="h1ListeEvent">Liste des actualités</h1>
            <table class="table">
                <thead style="background-color: #D2C8F8;">
                    <tr>
                        <th>Id</th>
                        <th>Titre</th>
                        <th>Photo</th>
                        <th>Description</th>
                        <th>Modifier</th>
                        <th>Supprimer</th>
                    </tr>
                </thead>
                <tbody>
                    {% for new in news %}
                        <tr>
                            <td>{{ new.id }}</td>
                            <td>{{ new.title }}</td>
                            <td>{{ new.picture }}</td>
                            <td>{{ new.description }}</td>
                            <td><a href="{{ path('admin_news_edit', {id: new.id})}}"><i style="padding-left: 20px;color:black" class="bi bi-pencil-square"></i></a></td>
                            <td><a href="{{ path('admin_news_delete', {id: new.id})}}"><i style="padding-left: 25px;color:black" class="bi bi-trash"></i></a></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </main>
    </div>
</div>
{% endblock %}
